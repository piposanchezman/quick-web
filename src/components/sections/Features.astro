---
interface Props {
  translations: any;
}

const { translations: t } = Astro.props;
---

<section id="caracteristicas" class="py-24 px-4 relative z-10">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-20 animate-fade-in-up">
      <h2
        class="text-4xl md:text-5xl font-bold text-white mb-6 tracking-tight"
      >
        {t['features.title']}
      </h2>
      <p
        class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed"
      >
        {t['features.subtitle']}
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Feature Card 1 -->
      <div
        class="group relative p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-[#55ffff]/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-10px_rgba(85,255,255,0.2)] overflow-hidden"
      >
        <!-- Hover Gradient Background -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-[#55ffff]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>

        <div class="relative z-10">
          <div
            class="w-14 h-14 bg-[#55ffff]/10 rounded-xl flex items-center justify-center mb-6 text-[#55ffff] group-hover:scale-110 transition-transform duration-500 border border-[#55ffff]/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-white mb-3 group-hover:text-[#55ffff] transition-colors"
          >
            {t['features.modes.title']}
          </h3>
          <p
            class="text-gray-400 leading-relaxed"
          >
            {t['features.modes.desc']}
          </p>
        </div>
      </div>

      <!-- Feature Card 2 -->
      <div
        class="group relative p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-[#00cccc]/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-10px_rgba(0,204,204,0.2)] overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-[#00cccc]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div class="relative z-10">
          <div
            class="w-14 h-14 bg-[#00cccc]/10 rounded-xl flex items-center justify-center mb-6 text-[#00cccc] group-hover:scale-110 transition-transform duration-500 border border-[#00cccc]/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-white mb-3 group-hover:text-[#00cccc] transition-colors"
          >
            {t['features.economy.title']}
          </h3>
          <p
            class="text-gray-400 leading-relaxed"
          >
            {t['features.economy.desc']}
          </p>
        </div>
      </div>

      <!-- Feature Card 3 -->
      <div
        class="group relative p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-[#7289DA]/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-10px_rgba(114,137,218,0.2)] overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-[#7289DA]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div class="relative z-10">
          <div
            class="w-14 h-14 bg-[#7289DA]/10 rounded-xl flex items-center justify-center mb-6 text-[#7289DA] group-hover:scale-110 transition-transform duration-500 border border-[#7289DA]/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-white mb-3 group-hover:text-[#7289DA] transition-colors"
          >
            {t['features.community.title']}
          </h3>
          <p
            class="text-gray-400 leading-relaxed"
          >
            {t['features.community.desc']}
          </p>
        </div>
      </div>

      <!-- Feature Card 4 -->
      <div
        class="group relative p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-[#f59e0b]/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-10px_rgba(245,158,11,0.2)] overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-[#f59e0b]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div class="relative z-10">
          <div
            class="w-14 h-14 bg-[#f59e0b]/10 rounded-xl flex items-center justify-center mb-6 text-[#f59e0b] group-hover:scale-110 transition-transform duration-500 border border-[#f59e0b]/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-white mb-3 group-hover:text-[#f59e0b] transition-colors"
          >
            {t['features.events.title']}
          </h3>
          <p
            class="text-gray-400 leading-relaxed"
          >
            {t['features.events.desc']}
          </p>
        </div>
      </div>

      <!-- Feature Card 5 -->
      <div
        class="group relative p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-green-500/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-10px_rgba(34,197,94,0.2)] overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-green-500/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div class="relative z-10">
          <div
            class="w-14 h-14 bg-green-500/10 rounded-xl flex items-center justify-center mb-6 text-green-500 group-hover:scale-110 transition-transform duration-500 border border-green-500/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-white mb-3 group-hover:text-green-500 transition-colors"
          >
            {t['features.performance.title']}
          </h3>
          <p
            class="text-gray-400 leading-relaxed"
          >
            {t['features.performance.desc']}
          </p>
        </div>
      </div>

      <!-- Feature Card 6 -->
      <div
        class="group relative p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-10px_rgba(168,85,247,0.2)] overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-purple-500/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
        <div class="relative z-10">
          <div
            class="w-14 h-14 bg-purple-500/10 rounded-xl flex items-center justify-center mb-6 text-purple-500 group-hover:scale-110 transition-transform duration-500 border border-purple-500/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-bold text-white mb-3 group-hover:text-purple-500 transition-colors"
          >
            {t['features.staff.title']}
          </h3>
          <p
            class="text-gray-400 leading-relaxed"
          >
            {t['features.staff.desc']}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
