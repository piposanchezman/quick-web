---
interface Props {
    translations: any;
}

const { translations: t } = Astro.props;
---

<footer
  class="relative z-10 bg-[#050510]/90 backdrop-blur-xl border-t border-white/5 pt-16 pb-8 px-4"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-4 gap-12 mb-12">
      <!-- Brand Section -->
      <div class="col-span-1 md:col-span-2 space-y-6">
        <div class="flex items-center space-x-4">
          <div class="relative">
            <div
              class="absolute inset-0 bg-[#55ffff] rounded-full blur opacity-20"
            >
            </div>
            <img
              src="/logo.webp"
              alt="QuickLand Logo"
              class="relative w-12 h-12 rounded-full border border-white/10"
              loading="lazy"
              decoding="async"
              width="48"
              height="48"
            />
          </div>
          <div>
            <span class="text-2xl font-bold text-white tracking-tight"
              >QuickLand</span
            >
            <span
              class="block text-xs text-[#55ffff] uppercase tracking-widest font-semibold"
              >Network</span
            >
          </div>
        </div>
        <p
          class="text-gray-400 text-sm leading-relaxed max-w-sm"
        >
          {t['footer.tagline']}
        </p>
        <div class="flex space-x-4">
          <!-- Discord Social -->
          <a
            href="https://discord.quickland.net"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-[#5865F2]/10 rounded-lg flex items-center justify-center text-[#5865F2] hover:bg-[#5865F2] hover:text-white transition-all duration-300"
            aria-label="Discord"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 127.14 96.36"
              fill="currentColor"
            >
              <path
                d="M107.7 8.07A105.15 105.15 0 0 0 81.47 0a72.06 72.06 0 0 0-3.36 6.83 97.68 97.68 0 0 0-29.11 0A72.37 72.37 0 0 0 45.64 0a105.89 105.89 0 0 0-26.25 8.09C2.79 32.65-1.71 56.6.54 80.21a105.73 105.73 0 0 0 32.17 16.15 77.7 77.7 0 0 0 6.89-11.11 68.42 68.42 0 0 1-10.85-5.18c.91-.66 1.8-1.34 2.66-2a75.57 75.57 0 0 0 64.32 0c.87.71 1.76 1.39 2.66 2a68.68 68.68 0 0 1-10.87 5.19 77 77 0 0 0 6.89 11.1 105.25 105.25 0 0 0 32.19-16.14c2.64-27.38-4.51-51.11-18.9-72.15ZM42.45 65.69C36.18 65.69 31 60 31 53s5-12.74 11.43-12.74S54 46 53.89 53s-5.05 12.69-11.44 12.69Zm42.24 0C78.41 65.69 73.25 60 73.25 53s5-12.74 11.44-12.74S96.23 46 96.12 53s-5.04 12.69-11.43 12.69Z"
              ></path>
            </svg>
          </a>
          <!-- Email Social -->
          <a
            href="mailto:quickland36@gmail.com"
            class="w-10 h-10 bg-[#55ffff]/10 rounded-lg flex items-center justify-center text-[#55ffff] hover:bg-[#55ffff] hover:text-black transition-all duration-300"
            aria-label="Email"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4
          class="text-white font-bold mb-6 text-sm uppercase tracking-wider"
        >
          {t['footer.quickLinks']}
        </h4>
        <ul class="space-y-3">
          <li>
            <a
              href="https://discord.quickland.net"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-[#55ffff] transition-colors flex items-center group"
            >
              <span
                class="w-1.5 h-1.5 bg-[#55ffff] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t['footer.discord']}
            </a>
          </li>
          <li>
            <a
              href="https://tienda.quickland.net"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-[#55ffff] transition-colors flex items-center group"
            >
              <span
                class="w-1.5 h-1.5 bg-[#55ffff] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t['footer.shop']}
            </a>
          </li>
          <li>
            <a
              href="mailto:quickland36@gmail.com"
              class="text-gray-400 hover:text-[#55ffff] transition-colors flex items-center group"
            >
              <span
                class="w-1.5 h-1.5 bg-[#55ffff] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"
              ></span>
              {t['footer.support']}
            </a>
          </li>
        </ul>
      </div>

      <!-- Server Info -->
      <div>
        <h4
          class="text-white font-bold mb-6 text-sm uppercase tracking-wider"
        >
          {t['footer.info']}
        </h4>
        <ul class="space-y-3 text-sm text-gray-400">
          <li class="flex flex-col">
            <span class="text-xs text-gray-500 uppercase font-bold mb-1"
              >{t['footer.ipJava']}</span
            >
            <span
              class="text-white font-mono bg-white/5 py-1 px-2 rounded w-fit select-all"
              >quickland.net</span
            >
          </li>
          <li class="flex flex-col">
            <span class="text-xs text-gray-500 uppercase font-bold mb-1"
              >{t['footer.ipBedrock']}</span
            >
            <span
              class="text-white font-mono bg-white/5 py-1 px-2 rounded w-fit select-all"
              >bedrock.quickland.net</span
            >
          </li>
          <li class="flex items-center mt-2">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"
            ></span>
            <span>{t['footer.serverVersions']}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="border-t border-white/5 pt-8 mt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <div class="text-gray-500 text-sm text-center md:text-left">
        <p>
          {t['footer.copyright']}
        </p>
        <p class="mt-1 text-xs opacity-60">
          {t['footer.disclaimer']}
        </p>
      </div>
      <div
        class="flex items-center space-x-2 text-xs text-gray-600 font-medium bg-black/30 py-2 px-4 rounded-full border border-white/5"
      >
        <span>{t['footer.madeWith']}</span>
      </div>
    </div>
  </div>
</footer>
