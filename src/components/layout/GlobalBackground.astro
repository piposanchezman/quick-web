---
// GlobalBackground.astro
---

<div class="fixed inset-0 z-[-50] w-full h-full overflow-hidden bg-[#050510]">
    <!-- Deep Ambient Glows -->
    <div
        class="absolute top-[-20%] left-[-10%] w-[70%] h-[70%] rounded-full bg-gradient-radial from-[#55ffff]/10 to-transparent blur-[120px] animate-pulse-slow"
    >
    </div>
    <div
        class="absolute bottom-[-10%] right-[-5%] w-[60%] h-[60%] rounded-full bg-gradient-radial from-[#8b5cf6]/10 to-transparent blur-[120px] animate-pulse-slow animation-delay-4000"
    >
    </div>

    <!-- Moving Orbs -->
    <div
        class="absolute top-[20%] right-[10%] w-[30%] h-[30%] rounded-full bg-[#3b82f6]/5 blur-[100px] animate-float animation-delay-2000"
    >
    </div>

    <!-- Grid Pattern overlay -->
    <div class="absolute inset-0 bg-grid-pattern opacity-[0.02] z-[0]"></div>
</div>

<style>
    @keyframes float {
        0% {
            transform: translate(0px, 0px) rotate(0deg);
        }
        33% {
            transform: translate(30px, -50px) rotate(10deg);
        }
        66% {
            transform: translate(-20px, 20px) rotate(-5deg);
        }
        100% {
            transform: translate(0px, 0px) rotate(0deg);
        }
    }

    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.5;
            transform: scale(1);
        }
        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    .animate-float {
        animation: float 25s infinite ease-in-out;
    }

    .animate-pulse-slow {
        animation: pulse-slow 15s infinite ease-in-out;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animation-delay-4000 {
        animation-delay: 4s;
    }

    .bg-grid-pattern {
        background-image:
            linear-gradient(
                to right,
                rgba(85, 255, 255, 0.05) 1px,
                transparent 1px
            ),
            linear-gradient(
                to bottom,
                rgba(85, 255, 255, 0.05) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
        mask-image: radial-gradient(
            circle at center,
            black 40%,
            transparent 100%
        );
    }
</style>
