---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/layout/Navbar.astro";
import Footer from "../../components/layout/Footer.astro";
import Header from "../../components/sections/Header.astro";
import Features from "../../components/sections/Features.astro";
import Gamemodes from "../../components/sections/Gamemodes.astro";
import About from "../../components/sections/About.astro";
import Rules from "../../components/sections/Rules.astro";
import Contact from "../../components/sections/Contact.astro";
import { getTranslations } from "../../i18n/utils";

import "../../styles/global.css";

const locale = 'en';
const t = getTranslations(locale);
---

<Layout locale={locale} translations={t}>
  <Navbar translations={t} />
  <Header translations={t} />
  <Features translations={t} />
  <Gamemodes translations={t} />
  <About translations={t} />
  <Rules translations={t} />
  <Contact translations={t} />
  <Footer translations={t} />
</Layout>

<script src="../../scripts/main.ts"></script>
